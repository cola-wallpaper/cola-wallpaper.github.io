<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#00000000"
    android:gravity="bottom"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <RelativeLayout
            android:id="@+id/xlistview_header_content"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_gravity="bottom"
            android:background="#00000000">

            <LinearLayout
                android:id="@+id/xlistview_header_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="20dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/xlistview_arrow"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/xlistview_header_hint_textview"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:textColor="#999999"
                    android:gravity="center"
                    android:text="@string/xlistview_header_hint_normal"
                    android:textSize="12dp"
                    android:visibility="visible" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#999999"
                        android:text="@string/xlistview_header_last_time"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/xlistview_header_time"
                        android:textColor="#999999"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12dp" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/xlistview_header_arrow"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignLeft="@id/xlistview_header_text"
                android:layout_centerVertical="true"
                android:layout_marginTop="15dp"
                android:src="@drawable/b6_drop_down1_drop_down" />

            <ImageView
                android:id="@+id/xlistview_header_round"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_alignLeft="@id/xlistview_header_text"
                android:layout_centerVertical="true"
                android:layout_marginTop="15dp"
                android:src="@drawable/b6_drop_down_round"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/xlistview_header_right"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignLeft="@id/xlistview_header_text"
                android:layout_centerVertical="true"
                android:layout_marginTop="15dp"
                android:src="@drawable/b6_drop_down1_duigou"
                android:visibility="gone" />

        </RelativeLayout>
    </FrameLayout>
</LinearLayout>